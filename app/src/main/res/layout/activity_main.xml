<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:hint="ID"/>

    <EditText
        android:id="@+id/edt_tenKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:hint="Tên khoa học"/>

    <EditText
        android:id="@+id/edt_tenTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:imeOptions="actionNext"
        android:hint="Tên thường gọi"/>

    <EditText
        android:id="@+id/edt_dacTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:imeOptions="actionNext"
        android:hint="Đặc tính"/>

    <EditText
        android:id="@+id/edt_mauLa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:imeOptions="actionNext"
        android:hint="Màu lá"/>

    <EditText
        android:id="@+id/edt_hinhAnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_border"
        android:padding="16dp"
        android:imeOptions="actionDone"
        android:hint="Link hình ảnh"/>




    <Button
        android:id="@+id/btn_cayXanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thêm Cây xanh"
        android:background="@drawable/round_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>